<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE smil SYSTEM "file:/Users/matthiasmenn/Documents/smil/DTD/SMIL30Language.dtd">
<smil version="3.0" baseProfile="Language" xmlns="">
    <head>
        <layout>
            <root-layout background-color="fafafa" width="600" height="400"/>
        </layout>
    </head>
    <body>
        <par class="scene">
            <seq>
                <img src="pictures/picture.jpg" begin="6s" dur="4s">
                    <animate attributeName="x" to="300" dur="3"/>
                </img>

                <img src="pictures/39.jpg" begin="1s" dur="4s" left="200" top="200"
                    mediaOpacity="0.2">
                    <animate attributeName="mediaOpacity" to="1.0"/>
                </img>
            </seq>
            <smilText begin="2" dur="2">Hello World!</smilText>
        </par>
    </body>
</smil>
